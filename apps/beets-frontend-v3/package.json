{
  "name": "beets-frontend-v3",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "pnpm --filter lib graphql:gen && next build",
    "dev": "concurrently \"pnpm --filter lib graphql:gen --watch\" \"next dev -p 4000\"",
    "gen:wagmi": "pnpm wagmi generate",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "prepare": "cd ../.. && husky apps/frontend-v3/.husky",
    "start": "next start",
    "typecheck": "tsc --project tsconfig.json --noEmit",
    "test:unit": "vitest"
  },
  "dependencies": {
    "@chakra-ui/hooks": "^2.2.1",
    "@chakra-ui/react": "^2.8.2",
    "@chakra-ui/theme-tools": "^2.1.2",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@nikolovlazar/chakra-ui-prose": "^1.2.1",
    "@repo/lib": "workspace:*",
    "@repo/beets": "workspace:*",
    "@sentry/nextjs": "^8.13.0",
    "@studio-freight/react-lenis": "^0.0.47",
    "@vercel/speed-insights": "^1.0.1",
    "framer-motion": "^10.13.0",
    "lodash": "^4.17.21",
    "next": "14.2.0",
    "next-themes": "^0.3.0",
    "nextjs-toploader": "^1.6.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-use-measure": "^2.1.1",
    "viem": "^2.21.6"
  },
  "devDependencies": {
    "@chakra-ui/styled-system": "^2.9.2",
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@types/lodash": "^4.14.195",
    "@types/node": "20.3.2",
    "@types/react": "18.2.34",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.3.0",
    "@wagmi/cli": "^2.1.15",
    "concurrently": "^8.2.2",
    "eslint": "8.43.0",
    "eslint-plugin-prettier": "^4.2.1",
    "happy-dom": "^12.10.3",
    "lokijs": "^1.5.12",
    "msw": "2.0.10",
    "prettier": "^2.8.8",
    "typescript": "5.4.5",
    "vitest": "^2.1.1"
  },
  "engines": {
    "node": ">=18.x"
  },
  "engineStrict": true
}
